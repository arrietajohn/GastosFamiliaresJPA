<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="ConfiguracionBd" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>GastosFamiliares.Modelo.Entidades.Aporte</class>
    <class>GastosFamiliares.Modelo.Entidades.BolsaDeAhorro</class>
    <class>GastosFamiliares.Modelo.Entidades.Categoria</class>
    <class>GastosFamiliares.Modelo.Entidades.Familia</class>
    <class>GastosFamiliares.Modelo.Entidades.Fuente</class>
    <class>GastosFamiliares.Modelo.Entidades.Gasto</class>
    <class>GastosFamiliares.Modelo.Entidades.Ingreso</class>
    <class>GastosFamiliares.Modelo.Entidades.Miembro</class>
    <class>GastosFamiliares.Modelo.Entidades.Usuario</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/finanzasfamiliaresdb?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
